<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<meta name ="viewport" content="width=device-width, initial-scale=1"">
  		<%= csrf_meta_tags %>
		<%= render 'layouts/stylesheets' %>
  		<%= javascript_include_tag "application" %>
	</head>
		<% if signed_in? && admin? %>
		<body class="admin">
		<%else%>
		<body>
		<%end%>
		<div date-role="page" data-theme="b">
      	<%= render 'layouts/header' %>

		<div data-role="content" <%= data_theme %>>
			<div class="round">
			<% flash.each do |key, value | %>
				<div class ="flash <%= key %>" ><%= value %> </div> 
			<% end %>
			<%= yield %>
			</div>

		</div>

	</body>

</html>