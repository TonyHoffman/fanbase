    <td><%= type.event %></td>
    <td><%= link_to 'Sports', sports_path() %></td>
    <td><%= link_to 'Show', sport_type_path(@sport, type) %></td>
    <td><%= link_to 'Edit', edit_sport_type_path(@sport, type) %> </td>
    <td><%= link_to 'Events', type_events_path(type) %></td>
    <td><%= link_to 'Destroy', sport_type_path(@sport, type), confirm: 'Are you sure?', 
